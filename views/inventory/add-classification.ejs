<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>

    <%- messages() %>

    <% if (errors) { %>
        <ul class="notice">
       <% errors.array().forEach(error => { %>
         <li><%= error.msg %></li>
      <%  }) %>
       </ul>
    <% } %>

    <section class="formSection" id="addclass">
        <p>FEILD IS REQUIRED</p>
        <form id="addClassForm" action="/inv/add-classification" method="post">
        <fieldset>
            <legend>ADD Classification</legend>
            <label> The name must be only alphabetical characters <input id="classInput" type="text" name="classification_name" required pattern="[A-Za-z]{1,}" value="<%= locals.classification_name ? classification_name : '' %>"> </label>
            <label> <button type="submit">Add Class</button></label>
        </fieldset>
        </form>
     </section>