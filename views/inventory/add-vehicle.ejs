<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>

    <% messages() %>

    <% if (errors) { %>
        <ul class="notice">
       <% errors.array().forEach(error => { %>
         <li><%= error.msg %></li>
      <%  }) %>
       </ul>
    <% } %>

    <!-- classification_id inv_make inv_model 
         inv_description inv_image inv_thumbnail
         inv_price inv_year inv_miles inv_color 
         
         to see if the input names match up  |||| https://blog.joeandrieu.com/2013/10/16/how-to-conditionally-display-variables-with-ejs/-->

    <section class="formSection" id="addVehicle">
      <p>ALL FEILDS ARE REQUIRED</p>
      <form id="addClassForm" action="/inv/add-vehicle" method="post">
      <fieldset>
          <legend>Add Vehicle</legend>
          <label> Classification <%- select %> </label>
          <label> Make           <input    type="text" name="inv_make"       placeholder="min of 3 characters" required pattern="^[a-zA-Z0-9][a-zA-Z0-9 ]{2,}"   value="<%= locals.inv_make ? inv_make : '' %>">                         </label>
          <label> Model          <input    type="text" name="inv_model"      placeholder="min of 3 characters" required pattern="^[a-zA-Z0-9][a-zA-Z0-9 ]{2,}"   value="<%= locals.inv_model ? inv_model : '' %>">                       </label>
          <label> Description    <textarea id="textAr" name="inv_description"                                  required rows="7" cols="50" ></textarea>                                                              </label>
          <label> Image Path     <input    type="text" name="inv_image"                                        required                                          value="<%= locals.inv_image ? inv_image : '' %>">                       </label>
          <label> Thumbnail Path <input    type="text" name="inv_thumbnail"                                    required                                          value="<%= locals.inv_thumbnail ? inv_thumbnail : '' %>">               </label>
          <label> Price          <input    type="text" name="inv_price"      placeholder="decimal or integer"  required pattern="[0-9.]{1,}"                     value="<%= locals.inv_price ? inv_price : '' %>">                       </label>
          <label> Year           <input    type="text" name="inv_year"       placeholder="1946"                required pattern="[0-9]{4,4}"                     value="<%= locals.inv_year ? inv_year : '' %>">                         </label>
          <label> Miles          <input    type="text" name="inv_miles"      placeholder="digits only"         required pattern="[0-9]{1,}"                      value="<%= locals.inv_miles ? inv_miles : '' %>">                       </label>
          <label> Color          <input    type="text" name="inv_color"                                        required                                          value="<%= locals.inv_color ? inv_color : '' %>">                       </label>                  
          <label> <button id="VehicleButton" type="submit">Register</button> </label>
      </fieldset>
      </form>
      <input id="invDescription" type="hidden" value="<%= locals.inv_description ? inv_description : '' %>"> 
      <script type="text/javascript">
        document.getElementById("textAr").textContent = document.getElementById("invDescription").value
      </script>
   </section>